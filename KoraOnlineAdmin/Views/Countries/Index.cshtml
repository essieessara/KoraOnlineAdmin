@model IEnumerable<KoraOnlineAdmin.Models.Country>

@{
    ViewData["Title"] = "Index";
}

<h1>Kora Online Countries</h1>
<hr />
<p>
    <a asp-action="Create"class="btn btn-primary">Add country</a>
</p>
<div class="table-responsive">
    <table class="table table-bordered table-hover">
        <thead class="thead-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CountryAbbrevation)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CountryName)
                </th>
                <th>Options</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CountryAbbrevation)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CountryName)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.CountryId" class="btn btn-primary">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.CountryId" class="btn btn-info">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.CountryId" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    </div>