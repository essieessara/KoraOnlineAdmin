@model KoraOnlineAdmin.Models.League

@{
    ViewData["Title"] = "Create";
}

<h1>Add New League</h1>
<hr />
<div class="row">
    <div class="col-lg-8 col-md-12 col-sm-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="LeagueName" class="control-label"></label>
                <input asp-for="LeagueName" class="form-control" />
                <span asp-validation-for="LeagueName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LeagueImage" class="control-label"></label>
                <input asp-for="LeagueImage" class="form-control" />
                <span asp-validation-for="LeagueImage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
