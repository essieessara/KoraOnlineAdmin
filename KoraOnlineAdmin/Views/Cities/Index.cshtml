@model IEnumerable<KoraOnlineAdmin.Models.City>

@{
    ViewData["Title"] = "Index";
}

<h1>Kora online Cities</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Add city</a>
</p>
<div class="table-responsive">
    <table class="table table-bordered table-hover">
        <thead class="thead-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CityName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Country.CountryName)
                </th>
                <th>Options</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CityName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Country.CountryName)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.CityId" class="btn btn-primary">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.CityId" class="btn btn-info">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.CityId"class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    </div>